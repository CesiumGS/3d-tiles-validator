{
    "tags": {
        "allowUnknownTags": false
    },
    "source": {
        "include": ["lib"],
        "includePattern": ".+\\.js(doc)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "templates": {
        "cleverLinks": true,
        "default": {
            "outputSourceFiles": false
        },
        "sourceUrl": "https://github.com/CesiumGS/3d-tiles-validator/blob/{version}/lib/{filename}"
    },
    "opts": {
        "destination": "doc",
        "recurse": true
    }
}